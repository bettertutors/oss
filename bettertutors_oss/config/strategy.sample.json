            "required": [
                "hardware",
                "image",
                "location"
            ],
            "type": "object",
            "properties": {
                "hardware": {
                    "required": ["options"],
                    "type": "object",
                    "properties": {
                        "options": {
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "name": {"type": "string"},
                                        "id": {"type": "string"}
                                    }
                                }
                            ],
                            "type": "array"
                        }
                    }
                },
                "image": {
                    "required": [
                        "options",
                        "pick"
                    ],
                    "type": "object",
                    "properties": {
                        "options": {
                            "items": [
                                {
                                    "required": ["name"],
                                    "type": "object",
                                    "properties": {"name": {"type": "string"}}
                                }
                            ],
                            "type": "array"
                        },
                        "pick": {"type": "string"}
                    }
                },
                "location": {
                    "required": ["options"],
                    "type": "object",
                    "properties": {
                        "options": {
                            "items": [
                                {
                                    "required": ["name"],
                                    "type": "object",
                                    "properties": {"name": {"type": "string"}}
                                }
                            ],
                            "type": "array"
                        }
                    }
                }
            }
        },
        "description": {"type": "string"},
        "default_pick": {"type": "string"},
        "version": {"type": "string"},
        "provider": {
            "required": ["options"],
            "type": "object",
            "properties": {
                "options": {
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "EC2_AP_SOUTHEAST2": {
                                    "required": [
                                        "auth",
                                        "ssh"
                                    ],
                                    "type": "object",
                                    "properties": {
                                        "security_group": {
                                            "items": [{"type": "string"}],
                                            "type": "array"
                                        },
                                        "key_name": {"type": "string"},
                                        "ssh": {
                                            "required": [
                                                "key_name",
                                                "public_key_path"
                                            ],
                                            "type": "object",
                                            "properties": {
                                                "key_name": {"type": "string"},
                                                "public_key_path": {"type": "string"}
                                            }
                                        },
                                        "auth": {
                                            "required": [
                                                "key",
                                                "username"
                                            ],
                                            "type": "object",
                                            "properties": {
                                                "username": {"type": "string"},
                                                "key": {"type": "string"}
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    ],
                    "type": "array"
                }
            }
        },
        "name": {"type": "string"}
